<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manufacturer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Manufacturer: "/>

    <TextView
        android:id="@+id/model_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Model: "/>

    <TextView
        android:id="@+id/ram_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="RAM: "/>

    <TextView
        android:id="@+id/storage_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Storage: "/>

    <TextView
        android:id="@+id/battery_tv"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery: "/>

    <TextView
        android:id="@+id/android_version_tv"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Version: "/>

    <TextView
        android:id="@+id/camera_mp_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Camera MP: "/>

    <TextView
        android:id="@+id/camera_aperture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Camera Aperture: "/>

    <TextView
        android:id="@+id/processor_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Processor: "/>

    <TextView
        android:id="@+id/gpu_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="GPU: "/>

    <TextView
        android:id="@+id/gps_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="GPS: "/>

    <TextView
        android:id="@+id/gyroscope_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Gyroscope: "/>

    <TextView
        android:id="@+id/barometer_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Barometer: "/>

    <TextView
        android:id="@+id/accelerometer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Accelerometer: "/>

    <TextView
        android:id="@+id/rotation_vector_tv"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Rotation Vector: "/>

</LinearLayout>
